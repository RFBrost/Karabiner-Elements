            {
                "set_variable": {
                    "name": "flag_b",
                    "value": 1,
                    "key_up_value": 0
                }
            }
        ]
    },
    {
        "description": "tab -> escape if flag_a on",
        "type": "basic",
        "from": {
            "key_code": "tab"
        },
        "to": [
            {
                "key_code": "escape"
            }
        ],
        "conditions": [
            {
                "name": "flag_a",
                "type": "variable_if",
                "value": 1
            }
        ]
    }
